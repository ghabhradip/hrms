</div>



<div class="middle">
  <%= form_tag do %>
    <input type="file">
  <%end%>
</div>


<div class="middle">
<div class="d-flex flex-column">
  <div class="p-2 table-flex">Flex item 1</div>
  <div class="p-2 table-flex">Flex item 2</div>

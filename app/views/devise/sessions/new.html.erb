<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <center>
            <h2>Log in</h2>
        </center>
    </div>
    <div class="col-sm-3"></div>
  </div>


  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="form-group">
            <div>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Choose password" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
<% end %>



